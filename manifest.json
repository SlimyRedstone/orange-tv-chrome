{
	"name": "Orange TV Remote",
	"version": "1.0.0",
	"description": "Adds the Orange TV remote",
	"manifest_version": 3,
	"author": "SlimyRedstone",
	"permissions": ["storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "settings.html",
		"open_in_tab": true
	},
	"storage": {
		"name":"Parameters",
		"storage": {
			"managed_schema": "schema.json"
		}
	},
	"host_permissions": ["http://*/*", "https://*/*"]
}
